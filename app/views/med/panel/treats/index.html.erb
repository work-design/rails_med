<%= render 'filter_form' %>

<table class="table is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th><%= Treat.human_attribute_name(:name) %></th>
      <th><%= Treat.human_attribute_name(:type) %></th>
      <th>
        <%= link_to new_panel_treat_path, remote: true, class: 'button is-link is-small' do %>
          <i class="fa-light fa-plus"></i><%= t('.new') %>
        <% end %>
      </th>
    </tr>
  </thead>
  <tbody>
  <% @treats.each do |treat| %>
    <tr>
      <td><%= treat.name %></td>
      <td><%= treat.type_i18n %></td>
      <td>
        <%= link_to panel_treat_path(treat), aria: { label: t('.show') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fa-light fa-circle-info"></i>
        <% end %>
        <%= link_to edit_panel_treat_path(treat), aria: { label: t('.edit') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fa-light fa-pencil"></i>
        <% end %>
        <%= link_to panel_treat_path(treat), method: :delete, aria: { label: t('.destroy') }, data: { confirm: t('.confirm') }, remote: true, class: 'button is-small is-rounded is-light' do %>
          <i class="fa-light fa-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>

<%= paginate @treats %>
